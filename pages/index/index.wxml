<!--index.wxml-->

<!--Header-->
<scroll-view scroll-x>
  <view class='index-header'>
    <view class='index-header-column'>
      <view class='index-header-column-text' wx:for='{{theme}}' bindtap='onTapSwitchTheme'></view> <!--设置wx:for-->
    </view>
  </view>
</scroll-view>

<!--Top News-->
<view class='index-news-top' bindtap='onTapDetail'>
  <view class='index-news-top-title'>{{indexNews[0].title}}</view> <!--修改变量名称为准确值-->
  <image class='index-news-top-image' src='{{indexNews[0].firstImage}}'></image>
  <view class='index-news-top-source'>{{indexNews[0].source}}</view>
  <view class='index-news-top-time'>{{indexNews[0].time}}</view>
</view>

<!--Block News: 列表渲染和条件渲染-->
<view>
  <view class='index-news-block' data-id='{{indexNews.id}}' bindtap='onTapDetail' wx:for='{{indexNews}}' wx:key="key" wx:for-item="item" wx:for-index="idx"> 
  <!--问题-MDN数据传递：data-id如何设置？indexNews.id还是item.id？-->
    <view wx:if="{{idx>0}}" class='index-news-block-title'>{{item.title}}</view>
    <image wx:if="{{idx>0}}" class='index-news-block-image' src='{{item.firstImage}}'></image>
    <view wx:if="{{idx>0}}" class='index-news-block-source'>{{item.source}}</view>
    <view wx:if="{{idx>0}}" class='index-news-block-time'>{{item.time}}</view>
  </view>
</view>